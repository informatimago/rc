function connect-adb-device(){
    adb devices
    adb tcpip ${ANDROID_SERIAL/.*:/}
    sleep 2
    adb connect ${ANDROID_SERIAL}
    adb devices
}

function connect-nereid(){
    export ANDROID_SERIAL=192.168.2.182:5555
    connect-adb-device
}

