#echo .bash_env

export USERNAME="$USER"

if [ -L /usr/X11R6 ] ; then
    export PATH=/bin:/usr/bin:/sbin:/usr/sbin
    export MANPATH=/usr/share/man:/usr/man
else
    export PATH=/bin:/usr/bin:/sbin:/usr/sbin:/usr/X11R6/bin
    export MANPATH=/usr/X11R6/man:/usr/share/man:/usr/man
fi

########################################################################
# fink environment on MacOSX
########################################################################

if [ -r /sw/bin/init.sh ] ; then
   . /sw/bin/init.sh
fi

if [ -d /Developer/Tools ] ; then
    export PATH="/Developer/Tools:$PATH"
fi


########################################################################
# local environment
########################################################################

export PATH="/usr/local/bin:/usr/local/sbin:$PATH"
export MANPATH="/usr/local/share/man:/usr/local/man:$MANPATH"

if [ -z "$LD_LIBRARY_PATH" ] ; then
    export LD_LIBRARY_PATH=/usr/local/lib:/usr/lib
else
    export LD_LIBRARY_PATH=/usr/local/lib:/usr/lib:$LD_LIBRARY_PATH
fi

if [ -d /usr/lib/Real ] ; then
    export LD_LIBRARY_PATH=/usr/lib/Real:$LD_LIBRARY_PATH
fi


