########################################################################
# GNUstep environment
########################################################################

function gnustep {
    for gsr in / /gnustep /GNUstep /local/gnustep /local/GNUstep NOWHERE ; do
        if [ -d $gsr/System/Makefiles ] ; then
           gsr=$gsr/System
           break
        fi
        [ -d $gsr/Makefiles ] && break
    done
    [ -f $gsr/Makefiles/GNUstep.sh ] && .  $gsr/Makefiles/GNUstep.sh
}

